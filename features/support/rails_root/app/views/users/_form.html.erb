<% form_for(@user) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %>
    <br>
    <%= f.text_field :login %>
  </p>
  
  <p>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <%= f.password_field :password_confirmation %>
  </p>
  
  <p>
    <%= f.label :connect_to_provider %>
    <br>
    <% Reflex::OAuthServer.get_providers.each do |provider| %>
      <%= f.submit provider, :name => "react_provider" %>
    <% end %>
  </p>
  
  <p><%= f.submit "Save" %></p>
<% end %>